    <Version>0.3.1</Version>
    <ApplicationIcon />
    <StartupObject>GmodNET.BuidReq</StartupObject>
    <Authors>Gleb Krasilich</Authors>
    <Description>GmodNET manged module loader.</Description>
    <PackageLicenseExpression>MIT License</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/GlebChili/GmodDotNet</RepositoryUrl>
